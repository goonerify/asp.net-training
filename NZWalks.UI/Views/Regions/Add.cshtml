@* Bind the AddRegionViewModel to this view *@
@model NZWalks.UI.Models.AddRegionViewModel

@{
}

<h1 class="mt-3">Add Region</h1>

<form method="post">
	<div class="mt-3">
		<label class="form-label" for="Code">Code</label>
		<input type="text" class="form-control" id="code" name="Code" asp-for="Code" />
	</div>

	<div class="form-group">
		<label for="Name">Name</label>
		<input type="text" class="form-control" id="Name" name="Name" asp-for="Name" />
	</div>	

	<div class="form-group">
		<label for="RegionImageUrl">Image URL</label>
		@* NOTE: Seems name must match asp-for *@
		<input type="url" class="form-control" id="ImageUrl" name="RegionImageUrl" asp-for="RegionImageUrl" />
	</div>

	<div class="mt-3"><button type="submit" class="btn btn-primary">Submit</button></div>
</form>