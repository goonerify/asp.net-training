@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>
@{
}

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="mt-3 table table-bordered">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Code
			</th>
			<th>Name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Code)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					<a asp-controller="Regions" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a>
				</td>
			</tr>
		}
	</tbody>
</table>